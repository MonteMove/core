model Platform {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  updatedById String   @map("updated_by_id") @db.Uuid
  name        String
  code        String   @unique
  description String?
  icon        String?
  url         String?
  active      Boolean  @default(true)
  deleted     Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  created_by    User           @relation("platforms_created_by", fields: [userId], references: [id])
  updated_by    User           @relation("platforms_updated_by", fields: [updatedById], references: [id])
  walletDetails WalletDetail[]

  @@index([userId], map: "platforms_user_idx")
  @@index([updatedById], map: "platforms_updated_by_idx")
  @@index([code], map: "platforms_code_idx")
  @@index([active], map: "platforms_active_idx")
  @@index([deleted], map: "platforms_deleted_idx")
  @@index([createdAt], map: "platforms_created_at_idx")
  @@map("platforms")
}
