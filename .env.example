# ======================
# DATABASE
# ======================
# Local PostgreSQL (Docker)
POSTGRES_DB="montemove"
POSTGRES_USER="montemove"
POSTGRES_PASSWORD="montemove"
DATABASE_URL="postgresql://$POSTGRES_USER:$POSTGRES_PASSWORD@localhost:5432/$POSTGRES_DB"

# Prisma Postgres (Cloud) - раскомментируйте для использования
# DATABASE_URL="postgres://USER:PASSWORD@db.prisma.io:5432/postgres?sslmode=require"
# PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# ======================
# API SERVER
# ======================
PORT="3000"
NODE_ENV="development"

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET="YOUR_SUPER_SECRET_KEY_HERE_CHANGE_ME_IN_PRODUCTION"
JWT_ACCESS_TOKEN_EXPIRES_IN="3600"
JWT_REFRESH_TOKEN_EXPIRES_IN="2592000"

# ======================
# SESSION
# ======================
MAX_SESSIONS="5"

# ======================
# COOKIES
# ======================
REFRESH_TOKEN_COOKIE_NAME="refreshToken"
# For local: "localhost", for production/staging with cross-domain: leave empty ""
REFRESH_TOKEN_COOKIE_DOMAIN="localhost"
REFRESH_TOKEN_COOKIE_PATH="/"
# For local: "false", for production/staging HTTPS: "true"
REFRESH_TOKEN_COOKIE_SECURE="false"
# For local: "lax", for cross-domain (different subdomains): "none"
REFRESH_TOKEN_COOKIE_SAME_SITE="lax"

# ======================
# RATE LIMITING
# ======================
THROTTLER_TTL_MS="60000"
THROTTLER_LIMIT="10"

# ======================
# CORS
# ======================
CORS_ORIGINS="http://localhost:3001"
CORS_METHODS="GET,POST,PUT,PATCH,DELETE"
CORS_HEADERS="Content-Type,Authorization"

# ======================
# ADMIN INITIALIZATION
# ======================
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change_me_in_production"

# ======================
# TELEGRAM BOTS
# ======================
# Feedback Bot - для обратной связи от пользователей
TELEGRAM_FEEDBACK_BOT_TOKEN="your_feedback_bot_token_here"
TELEGRAM_FEEDBACK_CHAT_ID="your_feedback_chat_id_here"

# ======================
# FRONTEND
# ======================
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_AUTH_TOKEN_KEY="accessToken"
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_COOKIE_KEY="refreshToken"
USE_DEV_AUTH_MARKER=true