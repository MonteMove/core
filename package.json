{
  "name": "montemove-core",
  "version": "1.0.0",
  "private": true,
  "description": "MonteMove Core - Monorepo",
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "dev:api": "pnpm --filter @montemove/api run start:dev",
    "dev:frontend": "pnpm --filter @montemove/frontend run dev",
    "build": "pnpm --recursive run build",
    "build:api": "pnpm --filter @montemove/api run build",
    "build:frontend": "pnpm --filter @montemove/frontend run build",
    "start:api": "pnpm --filter @montemove/api run start:prod",
    "start:frontend": "pnpm --filter @montemove/frontend run start",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm --recursive run test",
    "test:api": "pnpm --filter @montemove/api run test",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next",
    "db:generate": "pnpm --filter @montemove/api run prisma:generate",
    "db:migrate": "pnpm --filter @montemove/api run prisma:dev",
    "db:deploy": "pnpm --filter @montemove/api run prisma:deploy",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
